// Prisma schema for Email Copilot
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String
  provider      String         // 'outlook' or 'gmail'
  accessToken   String?        @db.Text
  refreshToken  String?        @db.Text
  tokenExpiry   DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  emails        Email[]
  toneProfiles  ToneProfile[]
  syncLogs      SyncLog[]
}

model Email {
  id                String          @id @default(cuid())
  externalId        String          // Provider's email ID
  userId            String
  subject           String
  from              String
  to                String[]
  cc                String[]
  body              String          @db.Text
  bodyPreview       String
  receivedDateTime  DateTime
  hasAttachments    Boolean         @default(false)
  isRead            Boolean         @default(false)
  importance        String          @default("normal")
  categories        String[]
  conversationId    String?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  summary           EmailSummary?
  draftReplies      DraftReply[]
  
  @@unique([userId, externalId])
  @@index([userId, receivedDateTime])
}

model EmailSummary {
  id          String   @id @default(cuid())
  emailId     String   @unique
  summary     String   @db.Text
  keyPoints   String[]
  sentiment   String   @default("neutral")
  urgency     String   @default("medium")
  category    String?
  createdAt   DateTime @default(now())
  
  email       Email    @relation(fields: [emailId], references: [id], onDelete: Cascade)
}

model DraftReply {
  id              String   @id @default(cuid())
  emailId         String
  shorthand       String
  generatedReply  String   @db.Text
  tone            String
  createdAt       DateTime @default(now())
  
  email           Email    @relation(fields: [emailId], references: [id], onDelete: Cascade)
  
  @@index([emailId])
}

model ToneProfile {
  id              String   @id @default(cuid())
  userId          String
  formalityLevel  Float    @default(0.5)
  averageLength   Int      @default(100)
  commonPhrases   String[]
  signatureStyle  String   @default("")
  sampleCount     Int      @default(0)
  updatedAt       DateTime @updatedAt
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId])
}

model SyncLog {
  id            String   @id @default(cuid())
  userId        String
  provider      String
  syncType      String   // 'full' or 'incremental'
  emailsCount   Int      @default(0)
  status        String   // 'success', 'failed', 'in_progress'
  error         String?  @db.Text
  startedAt     DateTime @default(now())
  completedAt   DateTime?
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, startedAt])
}
