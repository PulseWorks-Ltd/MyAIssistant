{
  "name": "email-copilot",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered email assistant for Outlook and Gmail",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "cd packages/server && npm run db:migrate",
    "db:generate": "cd packages/server && npm run db:generate",
    "db:studio": "cd packages/server && npm run db:studio"
  },
  "devDependencies": {
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
